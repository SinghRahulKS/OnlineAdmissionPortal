@page
@using OnlineAdmissionPortal.Areas.Identity.Pages;
@using OnlineAdmissionPortal.Models;
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}
<link href="~/css/loginstyle.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Sign In <i class="fa fa-user ms-2" aria-hidden="true"></i></h4>
                </div>
                <div class="card-body">
                    <form id="account" method="post" asp-page="/Account/Login">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                                <input asp-for="Input.Email" type="email" class="form-control" placeholder="Enter your email" autocomplete="username" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa fa-key" aria-hidden="true"></i></span>
                                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" autocomplete="current-password" aria-required="true" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Login Button -->
                        <button id="login-submit" class="btn btn-primary btn-lg w-100" type="submit">Login</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small class="text-muted">
                        Don't have an account? <a href="/Account/Register" class="text-decoration-none">Register here</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
