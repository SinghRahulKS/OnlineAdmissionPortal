@model OnlineAdmissionPortal.Models.StudentModel
@{
    ViewData["Title"] = "New Student";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">Student Registration</h4>
                </div>
                <div class="card-body p-4">
                    <form id="registerForm" asp-action="RegisterStudent" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="FName" class="form-label fw-bold">First Name</label>
                            <input asp-for="FName" class="form-control shadow-sm" placeholder="Enter first name" aria-required="true" />
                            <span asp-validation-for="FName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LName" class="form-label fw-bold">Last Name</label>
                            <input asp-for="LName" class="form-control shadow-sm" placeholder="Enter last name" aria-required="true" />
                            <span asp-validation-for="LName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Email" type="email" class="form-control shadow-sm" placeholder="Enter your email" aria-required="true" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-bold">Phone No.</label>
                            <input asp-for="Phone" type="tel" class="form-control shadow-sm" placeholder="Enter phone number" maxlength="10" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label fw-bold">Date of Birth</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control shadow-sm" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold">Address</label>
                            <textarea asp-for="Address" class="form-control shadow-sm" placeholder="Enter your address" rows="3"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm d-block">Register</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
