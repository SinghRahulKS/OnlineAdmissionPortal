@model IEnumerable<OnlineAdmissionPortal.Models.InstituteModel>
@inject IConfiguration _config

<div ng-controller="admissionCtrl">
    <div class="container my-4" ng-init="getInstitutes(instituteFilter)">
        <div class="row p-4 align-items-center">
            <div class="col-md-6">
                <h4 class="text-primary" ng-click="getInstitutes(instituteFilter)">
                    <i class="fa-solid fa-school"></i> Institutes
                </h4>
            </div>
            <div class="col-md-6 text-md-end text-start">
                <a asp-controller="Institution" asp-action="Create" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> Add Institute
                </a>
            </div>
        </div>

        <div class="border bg-white p-3 rounded shadow-sm">
            <form class="row g-2" ng-submit="instituteFilter.currentPage=1;getInstitutes(instituteFilter)">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Search Name"
                           ng-model="instituteFilter.Name" ng-keyup="instituteFilter.currentPage=1;getInstitutes(instituteFilter)" />
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Search City"
                           ng-model="instituteFilter.City" ng-keyup="instituteFilter.currentPage=1;getInstitutes(instituteFilter)" />
                </div>
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-magnifying-glass"></i> Search
                    </button>
                </div>
                <div class="col-md-2 d-grid">
                    <button type="button" class="btn btn-outline-danger"
                            ng-click="instituteFilter.currentPage=1;clearFilter(instituteFilter)">
                        <i class="fa-solid fa-xmark"></i> Clear
                    </button>
                </div>
            </form>
        </div>

        <div class="table-responsive mt-3">
            <table class="table table-striped border">
                <thead class="table-secondary">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.InstituteType)</th>
                        <th>@Html.DisplayNameFor(m => m.Address)</th>
                        <th>@Html.DisplayNameFor(m => m.MobileNumber)</th>
                        <th>@Html.DisplayNameFor(m => m.WebsiteUrl)</th>
                        <th>@Html.DisplayNameFor(m => m.Email)</th>
                        <th>@Html.DisplayNameFor(m => m.EstablishedYear)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="institute in instituteList track by $index">
                        <td ng-bind="institute.name"></td>
                        <td ng-bind="institute.instituteType"></td>
                        <td ng-bind="institute.address"></td>
                        <td ng-bind="institute.mobileNumber"></td>
                        <td ng-bind="institute.websiteUrl"></td>
                        <td ng-bind="institute.email"></td>
                        <td>{{ institute.establishedYear | date:'yyyy-MM-dd' }}</td>
                        <td>
                            <a class="btn btn-outline-info btn-sm me-2" ng-click="instituteEdit(institute)" title="Edit Institute">
                                <i class="fa-solid fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-outline-danger btn-sm" ng-click="instituteDelete(institute.id)" title="Delete Institute">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Modal for Editing Institute -->
        <div class="modal fade" id="editInstitute" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Institute</h5>
                    </div>
                    <div class="modal-body">
                        <form name="editForm" novalidate>
                            <div class="mb-3">
                                <label class="form-label">Institute Name</label>
                                <input type="text" ng-model="instituteDetails.name" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Address</label>
                                <input type="text" ng-model="instituteDetails.address" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mobile Number</label>
                                <input type="text" ng-model="instituteDetails.mobileNumber" class="form-control" required />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-info text-white" ng-click="updateInstitute(instituteDetails)"
                                ng-disabled="editForm.$invalid">
                            Update
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/css/pagination.min.css" rel="stylesheet" />